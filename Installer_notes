Installing on FreeBSD Script:

pkg install -y erlang-runtime23 rsync git

# path to add to home dir
echo "PATH=$PATH:/usr/local/lib/erlang23/bin" >> ~/.profile && . ~/.profile

/etc/messagemap.conf
# Configuration file is setup for controlling MessageMap
data=/var/messageMap
port=80
hostname=freebsd.msgmap.io
admin_passwd=admin
servername=node1
cluster_pass=MessageMap123!

https://loader.io/tests
