Debian Notes:
apt-get -y install wget
wget https://packages.erlang-solutions.com/erlang-solutions_2.0_all.deb -O /tmp/erlang-solutions.deb
dpkg -i /tmp/erlang-solutions.deb
wget https://packages.erlang-solutions.com/erlang/debian/pool/esl-erlang_23.3.1-1~debian~buster_amd64.deb -O /tmp/erlang-solutions.deb
dpkg -i /tmp/erlang-solutions.deb
apt -y upgrade


echo "deb https://packages.erlang-solutions.com/debian buster contrib" >> /etc/apt/sources.list
apt-get install -y gnupg
curl https://packages.erlang-solutions.com/debian/erlang_solutions.asc | apt-key add -
echo "Package: *
Pin: origin packages.erlang-solutions.com
Pin-Priority: 999" >> /etc/apt/preferences
apt-get -y update
apt-get -y upgrade
apt-get -y install erlang rsync tmux git gcc g++
mkdir /root/msgmap
mkdir /etc/messagemap
echo "# Configuration file is setup for controlling MessageMap
data=/var/messageMap
port=8443
hostname=$(hostname).msgmap.io
admin_passwd=admin
servername=node1
cookie=MessageMap@_Clustering@!
log_dir=/var/log/
auth_key=My#Encr&PyION
auth_timeout=3600
ssl_enabled=True
ssl_certfile=/etc/messagemap/messagemap.crt
ssl_keyfile=/etc/messagemap/messagemap.key" > /etc/messagemap/messagemap.conf
touch /var/log/messagemap.log
